@model IEnumerable<project.Models.Book>
@{
    ViewData["Title"] = "Available Books";
    Layout = "";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Available Books - Library</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/NiceAdmin2/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/css/style.css" rel="stylesheet">

    <style>
        /* Enhance header appearance */
        .header {
            background-color: #343a40;
            padding: 10px 20px;
        }

        .header .logo h2 {
            color: #fff;
        }

        .header .nav-buttons a {
            color: #fff;
            margin-right: 20px;
        }

        /* Enhance section title */
        .books-title {
            text-align: center;
            margin: 30px 0;
            font-size: 36px;
            font-weight: 700;
            color: #343a40;
        }

        /* Book card styling */
        .book-card {
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease-in-out;
        }

        .book-card:hover {
            transform: scale(1.05);
        }

        .book-card img {
            height: 250px;
            object-fit: cover;
        }

        .card-body {
            padding: 20px;
        }

        .card-title {
            font-size: 20px;
            font-weight: bold;
        }

        .card-text {
            margin-bottom: 10px;
        }

        .card-price {
            font-size: 18px;
            font-weight: bold;
            color: #28a745;
        }

        /* General spacing and layout improvements */
        .container {
            max-width: 1200px;
        }

        footer {
            text-align: center;
            margin-top: 40px;
            padding: 10px 0;
            background-color: #f8f9fa;
        }

    </style>
</head>

<header id="header" class="header fixed-top d-flex align-items-center">
    <div class="d-flex align-items-center justify-content-between w-100">
        <div class="logo">
            <h2>Library</h2>
        </div>
        <div class="nav-buttons">
            <a asp-controller="BookController1" asp-action="catalogue" class="btn btn-outline-light">Books</a>
            <a asp-controller="Authors" asp-action="Index" class="btn btn-outline-light">Authors</a>
            <a asp-controller="UserBooks" asp-action="Myorders" class="btn btn-outline-light">My Orders</a>
        </div>
    </div>
</header>

<body>

    <div class="container">
        <h1 class="books-title" style="margin-top: 90px;" >Available Books</h1>

        <section class="section books">
            <div class="row">
                @foreach (var item in Model)
                {
                        <div class="col-md-4 mb-4">
                            <div class="card book-card">
                                <img class="card-img-top" src="~/images/@item.imgfile" alt="@item.Title">
                                <div class="card-body">
                                    <h5 class="card-title">@item.Title</h5>
                                    <p class="card-text">Category: @item.Category</p>
                                    <p class="card-text">Price: <span class="card-price">$@item.Price</span></p>
                                    <a asp-controller="UserBooks" asp-action="Create" asp-route-id="@item.BookId" class="btn btn-primary">Buy</a>
                                </div>
                            </div>
                        </div>
                }
            </div>
        </section>
    </div>

    <!-- Footer -->


    <!-- Vendor JS Files -->
    <script src="~/NiceAdmin2/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/NiceAdmin2/assets/js/main.js"></script>
</body>

</html>
