@model project.Models.Person

@{
    ViewData["Title"] = "Create";
    Layout = "";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>Create Person</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Vendor CSS Files -->
    <link href="~/NiceAdmin2/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/vendor/quill/quill.snow.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/vendor/quill/quill.bubble.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/vendor/remixicon/remixicon.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/vendor/simple-datatables/style.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/NiceAdmin2/assets/css/style.css" rel="stylesheet">
</head>

<body>

<main>
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a href="/" class="logo d-flex align-items-center w-auto">
                                <img src="~/NiceAdmin2/assets/img/logo.png" alt="">
                                <span class="d-none d-lg-block">NiceAdmin</span>
                            </a>
                        </div><!-- End Logo -->

                        <div class="card mb-3">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Create a Person</h5>
                                    <p class="text-center small">Enter personal details to create an account</p>
                                </div>

                                <form class="row g-3 needs-validation" asp-action="Create" method="post" novalidate enctype="multipart/form-data">
                                    <!-- Validation Summary for model-level errors -->
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <!-- Name Field -->
                                    <div class="col-12">
                                        <label asp-for="Name" class="form-label">Your Name</label>
                                        <input asp-for="Name" class="form-control" required />
                                        <div class="invalid-feedback">Please, enter your name!</div>
                                    </div>
                                    <div class="col-12">
                                        <label asp-for="Discription" class="form-label">Discription About Yourself</label>
                                        <input asp-for="Discription" class="form-control" required />
                                        <div class="invalid-feedback">Please, enter your Discription!</div>
                                    </div>

                                    <!-- Email Field -->
                                    <div class="col-12">
                                        <label asp-for="Email" class="form-label">Your Email</label>
                                        <input asp-for="Email" class="form-control" required />
                                        <div class="invalid-feedback">Please enter a valid email address!</div>
                                    </div>

                                    <!-- Password Field -->
                                    <div class="col-12">
                                        <label asp-for="Password" class="form-label">Password</label>
                                        <input asp-for="Password" class="form-control" type="password" required />
                                        <div class="invalid-feedback">Please enter your password!</div>
                                    </div>

                                    <!-- Phone Number Field -->
                                    <div class="col-12">
                                        <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                        <input asp-for="PhoneNumber" class="form-control" />
                                        <div class="invalid-feedback">Please enter a valid phone number!</div>
                                    </div>

                                    <!-- Role Field -->
                                    <div class="col-12">
                                        <label class="form-label">Role</label>
                                        <select class="form-select" asp-for="Role" required>
                                            <option value="0">Please select</option>
                                            <option value="Customer">Customer</option>
                                            <option value="Author">Author</option>
                                        </select>
                                    </div>

                                    <!-- Age Field -->
                                    <div class="col-12">
                                        <label asp-for="Age" class="form-label">Age</label>
                                        <input asp-for="Age" class="form-control" type="number" required />
                                        <div class="invalid-feedback">Please enter a valid age!</div>
                                    </div>
                                    <div class="form-group">
                                        <label class="control-label">Pic</label>
                                        <input type="file" class="form-control" name="file" />
                                        <div class="invalid-feedback">Please enter a valid image!</div>
                                    </div>
                                    <!-- Submit Button -->
                                    <div class="col-12">
                                        <button class="btn btn-primary w-100" type="submit">Regiser</button>
                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </section>

    </div>
</main><!-- End #main -->

<a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

<!-- Vendor JS Files -->
<script src="~/NiceAdmin2/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/NiceAdmin2/assets/vendor/quill/quill.js"></script>
<script src="~/NiceAdmin2/assets/vendor/simple-datatables/simple-datatables.js"></script>

<!-- Template Main JS File -->
<script src="~/NiceAdmin2/assets/js/main.js"></script>

</body>
</html>
