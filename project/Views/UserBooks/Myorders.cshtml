@model IEnumerable<project.Models.UserBook>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">

    <title>My Orders - Library</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Nunito:300,300i,400,400i,600,600i,700,700i|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/NiceAdmin2/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet">
    <link href="~/NiceAdmin2/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet">
    <link href="https://cdn.datatables.net/1.11.5/css/dataTables.bootstrap5.min.css" rel="stylesheet">

    <!-- Template Main CSS File -->
    <link href="~/NiceAdmin2/assets/css/style.css" rel="stylesheet">
    <style>
        /* Enhance header appearance */
        .header {
            background-color: #343a40;
            padding: 10px 20px;
        }

        .header .logo h2 {
            color: #fff;
        }

        .header .nav-buttons a {
            color: #fff;
            margin-right: 20px;
        }

        /* Enhance table appearance */
        .table {
            width: 100%;
            margin-top: 20px;
        }

        /* Add custom styles */
        .myorders-title {
            text-align: center;
            margin-top: 20px;
            margin-bottom: 20px;
            font-size: 36px;
            font-weight: 700;
            color: #343a40;
        }

        /* Enhance footer appearance */
        footer {
            text-align: center;
            margin-top: 40px;
            padding: 10px 0;
            background-color: #f8f9fa;
        }

    </style>
</head>

<header id="header" class="header fixed-top d-flex align-items-center">
    <div class="d-flex align-items-center justify-content-between w-100">
        <div class="logo">
            <h2>Library</h2>
        </div>
        <div class="nav-buttons">
            <a asp-controller="BookController1" asp-action="catalogue" class="btn btn-outline-light">Books</a>
            <a asp-controller="Authors" asp-action="Index" class="btn btn-outline-light">Authors</a>
            <a asp-controller="UserBooks" asp-action="Myorders" class="btn btn-outline-light">My Orders</a>
        </div>
    </div>
</header>

<body>

    <div class="container">
        <h1 class="myorders-title">My Orders</h1>

        <table id="myOrdersTable" class="table table-striped table-bordered datatable">
            <thead class="thead-dark">
                <tr>
                    <th>@Html.DisplayNameFor(model => model.BookId)</th>
                    <th>@Html.DisplayNameFor(model => model.PurchaseDate)</th>
                    <th>@Html.DisplayNameFor(model => model.Quantity)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Book.BookId)</td>
                            <td>@Html.DisplayFor(modelItem => item.PurchaseDate)</td>
                            <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                            <td>
                                @Html.ActionLink("Delete", "Delete", new { id = item.CustomerId, bookid = item.BookId })
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>

    <!-- Footer -->
    <footer>
        <p>&copy; 2024 Library Management System. All Rights Reserved.</p>
    </footer>

    <!-- Vendor JS Files -->
    <script src="~/NiceAdmin2/assets/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#myOrdersTable').DataTable(); // Initialize DataTable
        });
    </script>

</body>

</html>
